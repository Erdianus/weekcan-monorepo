{
  "extends": "@hktekno/tsconfig/base.json",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": [
      "es2022",
      "dom",
      "dom.iterable"
    ],
    "types": [
      "@remix-run/node",
      "vite/client"
    ],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./app/*"
      ]
    }
  }
}
